datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id          Int      @id @default(autoincrement())
    username    String
    email       String   @unique
    password    String
    createdAt   DateTime @default(now())
    // Beziehung zu den FÃ¤llen
    cases       UserCase[]
}

model Case {
    id          Int      @id @default(autoincrement())
    name        String
    companyType String?
    industry    String?
    createdAt   DateTime @default(now())
    // Beziehung zu den Nutzern
    users       UserCase[]
}

model UserCase {
    id          Int      @id @default(autoincrement())
    case        Case     @relation(fields: [caseId], references: [id])
    user        User     @relation(fields: [userId], references: [id])
    caseId      Int
    userId      Int

    @@unique([caseId, userId])
}


