// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// Define your datasource for MySQL
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Define your generator for Prisma Client
generator client {
  provider = "prisma-client-js"
}

// Define your User model
model User {
  id          Int       @id @default(autoincrement())
  firstName   String
  lastName    String
  username    String    @unique
  email       String    @unique
  password    String
  role        String
  createdAt   DateTime  @default(now())
  cases       UserCase[]

  // Define the messages relation
  messages    Message[]
}

// Define your Case model
model Case {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  companyType String?
  industry    String?
  createdAt   DateTime  @default(now())
  users       UserCase[]

  // Define the messages relation
  messages    Message[]
}

// Define your UserCase model
model UserCase {
  id          Int     @id @default(autoincrement())
  case        Case    @relation(fields: [caseId], references: [id])
  user        User    @relation(fields: [userId], references: [id])
  caseId      Int
  userId      Int

  @@unique([caseId, userId])
}

// Define your Message model
model Message {
  id        Int       @id @default(autoincrement())
  text      String
  createdAt DateTime  @default(now())

  // Define the user relation
  user      User      @relation(fields: [userId], references: [id])
  userId    Int

  // Define the case relation
  case      Case      @relation(fields: [caseId], references: [id])
  caseId    Int
}
